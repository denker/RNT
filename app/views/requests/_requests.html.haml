%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Phone
      %th Email
      %th Comment
      %th 
      %th 

  %tbody
    - @requests.each do |request|
      %tr
        %td= request.name
        %td= request.phone
        %td= request.email
        %td= request.comment
        %td= link_to 'Edit', edit_request_path(request), :remote => true
        %td= link_to 'Destroy', request, :remote => true, method: :delete, data: { confirm: 'Are you sure?' }