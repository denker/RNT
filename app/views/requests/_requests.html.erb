<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Comment</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.name %></td>
        <td><%= request.phone %></td>
        <td><%= request.email %></td>
        <td><%= request.comment %></td>
        <td><%= link_to 'Edit', edit_request_path(request), :remote => true %></td>
        <td><%= link_to 'Destroy', request, :remote => true, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>